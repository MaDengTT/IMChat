<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:background="@color/white_Fa"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/iv_menu_ic"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="积分记录"
        android:id="@+id/tv_menu_name"
        app:layout_constraintRight_toRightOf="@+id/iv_menu_ic"
        app:layout_constraintLeft_toLeftOf="@+id/iv_menu_ic"
        app:layout_constraintTop_toBottomOf="@+id/iv_menu_ic"
        android:textSize="@dimen/text_menu_size"
        android:textColor="@color/primaryText"
        />
    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_menu_name"
        app:layout_constraintRight_toRightOf="@+id/tv_menu_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_menu_name"
        android:id="@+id/tv_menu_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最高返利10%"
        android:textSize="@dimen/text_hint_info_size"
        />

    <TextView
        android:id="@+id/tv_menu_tips"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:background="@drawable/ic_my_message_tips_shape"
        app:layout_constraintBottom_toTopOf="@+id/iv_menu_ic"
        app:layout_constraintRight_toRightOf="@+id/iv_menu_ic"
        app:layout_constraintStart_toEndOf="@+id/iv_menu_ic"
        app:layout_constraintTop_toTopOf="@+id/iv_menu_ic" />

</android.support.constraint.ConstraintLayout>
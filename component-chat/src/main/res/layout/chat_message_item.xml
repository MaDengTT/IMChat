<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/chat_avatar"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f00"
        android:text="0"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar"
        app:layout_constraintRight_toRightOf="@+id/iv_avatar" />


    <TextView
        android:layout_marginLeft="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar"
        app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
        app:layout_constraintBottom_toTopOf="@+id/tv_chat_new"
        app:layout_constraintRight_toLeftOf="@+id/tv_chat_time"
        android:text="移动开发"
        android:id="@+id/tv_chat_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginRight="16dp"
        android:textSize="16sp"
        android:textColor="#000"
        />
    <TextView
        android:layout_marginTop="4dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintLeft_toLeftOf="@+id/tv_chat_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_chat_name"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tv_chat_new"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="用户说: ABCDEFGAGMENTARLLKJKJJKFFDFDFF"
        android:layout_marginRight="16dp"
        android:textSize="12sp"
        />

    <TextView
        android:textSize="12sp"
        android:id="@+id/tv_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:text="14:17"
        app:layout_constraintBottom_toBottomOf="@+id/tv_chat_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_chat_name" />
</android.support.constraint.ConstraintLayout>